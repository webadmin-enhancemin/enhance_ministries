<nav class="nav{% if navStyle == 'solid' %} nav-solid{% endif %}">
    <div class="nav-container">
        <a href="{{ '/' | url }}" class="nav-logo">
            <img src="{{ '/assets/logo.png' | url }}" alt="{{ site.name }}" width="129" height="40">
        </a>
        <button class="nav-toggle" aria-label="Toggle navigation">
            <span></span>
            <span></span>
            <span></span>
        </button>
        <ul class="nav-menu">
            {% for item in navigation.items %}
            <li{% if item.dropdown %} class="nav-dropdown"{% endif %}>
                {% if item.dropdown %}
                <a href="{{ item.url | url }}" class="dropdown-toggle{% if item.active %} active{% endif %}">{{ item.text }}</a>
                <ul class="dropdown-menu">
                    {% for child in item.children %}
                    <li><a href="{{ child.url | url }}"{% if child.active %} class="active"{% endif %}>{{ child.text }}</a></li>
                    {% endfor %}
                </ul>
                {% else %}
                <a href="{{ item.url | url }}">{{ item.text }}</a>
                {% endif %}
            </li>
            {% endfor %}
            <li><button class="btn btn-primary btn-sm nav-donate-btn">Donate</button></li>
        </ul>
    </div>
</nav>
