// Carousel navigation
document.querySelectorAll('.team-carousel-wrapper, .testimonial-carousel-wrapper, .services-carousel-wrapper, .partners-carousel-wrapper, .blog-carousel-wrapper, .messages-carousel-wrapper, .podcasts-carousel-wrapper, .articles-carousel-wrapper').forEach(wrapper => {
    const carousel = wrapper.querySelector('.team-carousel, .testimonial-carousel, .services-carousel, .partners-carousel, .blog-carousel, .messages-carousel, .podcasts-carousel, .articles-carousel');
    const prevBtn = wrapper.querySelector('.carousel-btn-prev');
    const nextBtn = wrapper.querySelector('.carousel-btn-next');

    if (carousel && prevBtn && nextBtn) {
        const scrollAmount = 350;

        prevBtn.addEventListener('click', () => {
            carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
        });

        nextBtn.addEventListener('click', () => {
            carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
        });
    }
});
