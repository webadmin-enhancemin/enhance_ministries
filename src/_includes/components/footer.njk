{#
  Footer Component

  Data source: src/_data/site.json (via .eleventy.js global data)
#}
<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-top">
                <img src="/assets/logo.png" alt="{{ site.name }}" class="footer-logo" width="100" height="31" loading="lazy">
                <span class="footer-divider">|</span>
                <span class="footer-tagline">{{ site.tagline }}</span>
                <span class="footer-divider">|</span>
                <address class="footer-address">{{ site.address }}</address>
            </div>
        </div>
        <div class="footer-bottom">
            &copy; {% year %} {{ site.name }} &bull; 501(c)(3) Nonprofit &bull; EIN: {{ site.ein }}
        </div>
    </div>
</footer>
