---
layout: layouts/base.njk
navStyle: solid
hasDropdown: true
ogType: article
---

<!-- Post Hero -->
<header class="blog-hero">
    <img src="/assets/hero-mountain.webp" alt="" class="hero-bg-img" width="1920" height="1080">
    <div class="container">
        <h1>{{ title }}</h1>
        <p class="blog-hero-meta">{{ date | readableDate }}{% if author %} &middot; {{ author }}{% endif %}</p>
    </div>
</header>

<!-- Post Content -->
<article class="section">
    <div class="container">
        {% if featuredImage %}
        <div class="blog-post-hero-image">
            <img src="{{ featuredImage }}" alt="{{ title }}">
        </div>
        {% endif %}
        <div class="blog-post-body">
            {{ content | safe }}
        </div>
    </div>
</article>
